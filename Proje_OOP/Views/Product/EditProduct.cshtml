@model Proje_OOP.Entity.Product
@{
    ViewData["Title"] = "EditProduct";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Ürün Düzenleme Sayfası</h1>

<form method="post">
    @Html.Label("Ürün ID")
    @Html.TextBoxFor(x=>x.ProductId,new { @class = "form-control"})
    <br />
    @Html.Label("Ürün Adı")
    @Html.TextBoxFor(x=>x.ProductName,new { @class = "form-control"})
    <br />
    @Html.Label("Ürün Fiyatı")
    @Html.TextBoxFor(x=>x.ProductPrice,new { @class = "form-control"})
    <br />
    @Html.Label("Ürün Stok Sayısı")
    @Html.TextBoxFor(x=>x.ProductStock,new { @class = "form-control"})
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>
